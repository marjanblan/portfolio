---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CaseCard from '../components/CaseCard.astro';
const cases = [
  { href:'/work/uima', title:'UIMA Website & Motion', tags:['Branding','Motion'], year:'2014', cover:'/work/uima/cover.jpg' },
  { href:'/work/dolmo', title:'DOLMO System', tags:['Editorial','System'], year:'2024', cover:'/work/dolmo/cover.jpg' },
];
---
<BaseLayout title="Ruslan Mashkov — Digital Designer | Creative Coder">
  <Fragment slot="header"><Header /></Fragment>

  <section class="mcode-central rounded-2xl border p-8 mcode-crop-2">
    <h1 class="mcode-head text-m-y leading-none">DIGITAL DESIGNER · CREATIVE CODER · ART DIRECTION</h1>
    <p class="mt-6 max-w-2xl text-m-base">I build bold systems, editorial clarity, and code-driven motion.</p>
  </section>

  <section class="mt-8 flex flex-wrap gap-6">
    <div class="mcode-half rounded-2xl border p-8 mcode-crop-2 mcode-x-shift">
      <h2 class="mcode-head text-m-xl">Work</h2>
      <p class="mt-3 text-m-base">Selected projects across branding, editorial, and motion.</p>
    </div>
    <div class="mcode-half rounded-2xl border p-8 mcode-crop-2">
      <h2 class="mcode-head text-m-xl mcode-accent">Lab</h2>
      <p class="mt-3 text-m-base">Generative experiments and code‑driven studies.</p>
    </div>
  </section>

  <section class="mt-10 grid md:grid-cols-2 gap-6">
    {cases.map(c => <CaseCard {...c} />)}
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
