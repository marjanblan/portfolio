---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---
<BaseLayout title="UIMA — Case">
  <Fragment slot="header"><Header /></Fragment>

  <header class="mb-6">
    <h1 class="mcode-head text-m-xl leading-none">UIMA — WEBSITE & MOTION</h1>
    <p class="opacity-80">Role: Art Direction, Design, Motion · Year: 2014</p>
  </header>

  <section class="grid gap-4 md:grid-cols-2">
    <img src="/work/uima/cover.jpg" alt="UIMA" loading="lazy" class="rounded-xl border" />
    <img src="/og/og-default.jpg" alt="UIMA" loading="lazy" class="rounded-xl border" />
  </section>

  <section class="mt-8 grid md:grid-cols-3 gap-6">
    <div><h2 class="mcode-head mb-2">Problem</h2><p>1–3 строки сути.</p></div>
    <div><h2 class="mcode-head mb-2">Direction</h2><p>1–3 строки решения.</p></div>
    <div><h2 class="mcode-head mb-2">Outcome</h2><p>1–3 строки эффекта.</p></div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
